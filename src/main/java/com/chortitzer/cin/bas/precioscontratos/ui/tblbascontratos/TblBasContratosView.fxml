<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import com.chortitzer.cin.bas.precioscontratos.utils.TypeAheadField?>
<VBox prefHeight="600.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chortitzer.cin.bas.precioscontratos.ui.tblbascontratos.TblBasContratosView">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <items>
            <AnchorPane>
                <TableView fx:id="empresaTable" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="ID">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Nombre">
                            <cellValueFactory>
                                <PropertyValueFactory property="nombre" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </AnchorPane>
            <AnchorPane>
                <GridPane hgap="10" vgap="10" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
                    <Label text="Fecha" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <DatePicker fx:id="dtpFecha" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <Label text="Empresa" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <TypeAheadField fx:id="thfEmpresa" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <Label text="Producto" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <TypeAheadField fx:id="thfProducto" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                    <Label text="Producto" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <TextField fx:id="txtPrecioPorKg" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                </GridPane>
            </AnchorPane>
        </items>
    </SplitPane>
    <AnchorPane>
    <ButtonBar AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <buttons>
            <Button fx:id="btnAdd" onAction="#add" text="Nuevo" />
            <Button fx:id="btnSave" onAction="#save" text="Guardar" />
            <Button fx:id="btnDelete" onAction="#delete" text="Eliminar" />
            <Button fx:id="btnReset" onAction="#reset" text="Cancelar" />
        </buttons>
    </ButtonBar>
    </AnchorPane>
</VBox>
