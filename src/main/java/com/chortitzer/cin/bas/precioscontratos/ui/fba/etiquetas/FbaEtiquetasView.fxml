<StackPane prefHeight="600.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.chortitzer.cin.bas.precioscontratos.ui.fba.etiquetas.FbaEtiquetasView">
    <VBox fx:id="mainBox">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Formula" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TypeAheadField fx:id="thfFormula" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="1"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox spacing="10.0">
            <GridPane hgap="5.0" prefWidth="830" style="-fx-background-color: #D5F5E3;" vgap="5.0">
                <Label text="Fecha Elaboracion" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <DateTimePicker fx:id="dtpFechaElaboracion" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Label text="Fecha Vencimiento" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <DateTimePicker fx:id="dtpFechaVencimiento" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Label text="Linea" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TypeAheadField fx:id="thfLinea" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Label text="Turno" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <TypeAheadField fx:id="thfTurno" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <Label text="Peso (Kg)" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <TypeAheadField fx:id="thfPeso" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                <Label text="Lote" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <FormattedTextField fx:id="txtLote" alignment="CENTER_RIGHT" GridPane.columnIndex="2"
                                    GridPane.rowIndex="6"/>
                <Label text="Cantidad de Etiquetas" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <FormattedTextField fx:id="txtCantidad" alignment="CENTER_RIGHT" GridPane.columnIndex="2"
                                    GridPane.rowIndex="7"/>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </GridPane>
            <GridPane hgap="5.0" prefWidth="830" style="-fx-background-color: #D6EAF8;" vgap="5.0">
                <Label text="Indicaciones" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextArea fx:id="txtIndicaciones" wrapText="true" minWidth="350" prefHeight="80"
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Ingredientes" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextArea fx:id="txtIngredientes" wrapText="true" minWidth="350" prefHeight="100"
                          GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label text="Niveles de Garantia" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <TextArea fx:id="txtNiveles" wrapText="true" minWidth="350" prefHeight="80" GridPane.columnIndex="1"
                          GridPane.rowIndex="6"/>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="7">
                    <Label text="NÂº Reg. SENACSA " GridPane.valignment="CENTER"/>
                    <FormattedTextField fx:id="txtSenacsa" alignment="CENTER_RIGHT"/>
                </HBox>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </GridPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <ImageView fx:id="imageView" preserveRatio="true" fitWidth="200"/>
        </HBox>
        <AnchorPane>
            <ButtonBar AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                       AnchorPane.topAnchor="10">
                <buttons>
                    <Button fx:id="btnPrint" defaultButton="true" onAction="#print" text="Imprimir"/>
                    <Button fx:id="btnPreview" onAction="#preview" text="Vista Previa"/>
                    <Button fx:id="btnReset" onAction="#reset" text="Cancelar"/>
                </buttons>
            </ButtonBar>
        </AnchorPane>
    </VBox>
    <VBox fx:id="loadingIndicator" alignment="CENTER">
        <ProgressIndicator progress="-1"/>
    </VBox>
</StackPane>
