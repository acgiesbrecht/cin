<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import tornadofx.control.DateTimePicker?>
<?import com.chortitzer.cin.bas.precioscontratos.utils.tiwulfx.TypeAheadField?>

<StackPane prefHeight="600.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.chortitzer.cin.bas.precioscontratos.ui.bascula.tblbasprecios.TblBasPreciosView">
    <VBox fx:id="mainBox">
        <SplitPane dividerPositions="0.7" orientation="VERTICAL" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <TableView fx:id="itemsTable" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                               AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <columns>
                            <TableColumn text="Fecha/Hora" prefWidth="170">
                                <cellValueFactory>
                                    <PropertyValueFactory property="fechahoraVigencia"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Producto" prefWidth="200">
                                <cellValueFactory>
                                    <PropertyValueFactory property="idProducto"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn style="-fx-alignment: CENTER-RIGHT" text="Precio (PYG/Kg)" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="valorGsPorKg"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </AnchorPane>
                <AnchorPane fx:id="editPane">
                    <GridPane hgap="10" vgap="10" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
                        <Label text="Fecha" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <DateTimePicker fx:id="dtpFecha" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Label text="Producto" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <TypeAheadField fx:id="thfProducto" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                        <Label text="Precio (PYG/Kg)" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <TextField fx:id="txtPrecioPorKg" alignment="CENTER_RIGHT" GridPane.columnIndex="2"
                                   GridPane.rowIndex="4"/>
                        <columnConstraints>
                            <ColumnConstraints/>
                            <ColumnConstraints/>
                            <ColumnConstraints/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                            <RowConstraints/>
                        </rowConstraints>
                    </GridPane>
                </AnchorPane>
            </items>
        </SplitPane>
        <AnchorPane>
            <ButtonBar AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                       AnchorPane.topAnchor="10">
                <buttons>
                    <Button fx:id="btnAdd" onAction="#add" text="Nuevo"/>
                    <Button fx:id="btnSave" onAction="#save" text="Guardar"/>
                    <Button fx:id="btnDelete" onAction="#delete" text="Eliminar"/>
                    <Button fx:id="btnReset" onAction="#reset" text="Cancelar"/>
                </buttons>
            </ButtonBar>
        </AnchorPane>
    </VBox>
    <VBox fx:id="loadingIndicator" alignment="CENTER">
        <ProgressIndicator progress="-1"/>
    </VBox>

</StackPane>
