<?xml version="1.0" encoding="UTF-8"?>

<?import com.panemu.tiwulfx.control.TypeAheadField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import tornadofx.control.DateTimePicker?>
<VBox prefHeight="600.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.chortitzer.cin.bas.precioscontratos.ui.fba.tblproductoxconvertidores.TblProductoxConvertidoresView">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <items>
            <AnchorPane>
                <TableView fx:id="itemsTable" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                           AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn text="Producto">
                            <cellValueFactory>
                                <PropertyValueFactory property="idProductox"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Kg por Bolsa" style="-fx-alignment: CENTER-RIGHT">
                            <cellValueFactory>
                                <PropertyValueFactory property="kgPorBolsa"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Descripcion en Etiqueta">
                            <cellValueFactory>
                                <PropertyValueFactory property="descripcionEnEtiqueta"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </AnchorPane>
            <AnchorPane AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
                <GridPane hgap="10" vgap="10">
                    <Label text="Producto" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <TypeAheadField fx:id="thfProducto" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <Label text="Kg por Bolsa" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtKgPorBolsa" GridPane.columnIndex="2" GridPane.rowIndex="2"
                               alignment="CENTER_RIGHT"/>
                    <Label text="Descripcion  en etiqueta" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtDescripcionEnEtiqueta" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                </GridPane>
            </AnchorPane>
        </items>
    </SplitPane>
    <AnchorPane>
        <ButtonBar AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
                   AnchorPane.topAnchor="10">
            <buttons>
                <Button fx:id="btnAdd" onAction="#add" text="Nuevo"/>
                <Button fx:id="btnSave" onAction="#save" text="Guardar"/>
                <Button fx:id="btnDelete" onAction="#delete" text="Eliminar"/>
                <Button fx:id="btnReset" onAction="#reset" text="Cancelar"/>
            </buttons>
        </ButtonBar>
    </AnchorPane>
</VBox>
